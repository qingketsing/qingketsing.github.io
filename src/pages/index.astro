---
import 'leaflet/dist/leaflet.css';
import '../styles/global.css';
import ProfileAside from '../components/introduction.astro';


const allPosts = await Astro.glob('../blogs/*.md');
// 处理数据：提取 frontmatter、添加文章链接，并按时间排序
const latestPosts = allPosts
  .map((post: any) => ({
    ...post.frontmatter,
    url: `/blog/${post.file.split('/').pop().split('.').shift()}`,
  })).sort((a: any, b: any) => new Date(b.pubDate).getTime() - new Date(a.pubDate).getTime()).slice(0, 5);

// 获取当前路径用于导航栏高亮
const currentPath = Astro.url.pathname;
